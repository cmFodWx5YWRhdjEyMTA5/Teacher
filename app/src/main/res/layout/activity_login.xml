<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easyschools.teacher.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logointxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dim45"
                android:text="@string/login"
                android:textStyle="bold"
                android:textAllCaps="true"
                style="@style/regular"
                android:textColor="@color/colorPrimary"
                />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/dim100"
                android:layout_height="@dimen/dim100"
                android:layout_below="@+id/logointxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66dp"
                android:background="@drawable/our_logo"
                 />
            <RelativeLayout
                android:layout_below="@id/logo"
                android:layout_width="match_parent"
                android:id="@+id/data_layout"
                android:layout_marginEnd="@dimen/dim30"
                android:layout_marginStart="@dimen/dim30"
                android:layout_marginTop="@dimen/dim10"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:layout_marginStart="@dimen/dim20"
                    android:layout_marginTop="@dimen/dim20"
                    android:layout_marginEnd="@dimen/dim20"
                    android:id="@+id/emailTxt"
                    style="@style/regular"
                    />
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailTxt"
                    android:layout_marginStart="@dimen/dim20"
                    android:layout_marginEnd="@dimen/dim20"
                    android:id="@+id/user_email"
                    style="@style/thin"
                    android:textColor="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_acc"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/psd"
                    android:layout_marginStart="@dimen/dim20"
                    android:layout_marginTop="@dimen/dim20"
                    android:layout_marginEnd="@dimen/dim20"
                    android:id="@+id/psdTxt"
                    style="@style/regular"
                    android:layout_below="@id/user_email"
                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/psdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim20"
                    android:layout_marginEnd="@dimen/dim20"
                    app:passwordToggleEnabled="true"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/user_psd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        style="@style/thin"
                        android:textColor="@color/colorPrimary"
                        />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remember_me"
                    android:id="@+id/remember_me"
                    android:layout_below="@id/data_layout"
                    android:layout_marginStart="@dimen/dim50"
                    android:layout_marginTop="@dimen/dim10"
                    style="@style/regular"
                    />


            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dim20"
                android:layout_marginBottom="@dimen/dim20"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remember_me"
                android:background="@drawable/rounded_btn"
                android:layout_marginStart="@dimen/dim50"
                android:layout_marginEnd="@dimen/dim50"
                android:text="@string/login"
                android:id="@+id/loginBtn"
                style="@style/regular"
                android:foreground="@drawable/ripple_effect"
                android:textColor="@android:color/white"
                />

            <LinearLayout
                android:layout_below="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:id="@+id/lang"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ar"
                    android:id="@+id/ar"
                    android:layout_marginEnd="40dp"
                    android:contentDescription="TODO" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/en"
                    android:id="@+id/en"
                    android:layout_marginStart="20dp"
                    android:contentDescription="TODO" />

            </LinearLayout>
            <TextView
                android:id="@+id/forget_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lang"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dim20"
                android:layout_marginEnd="@dimen/dim20"
                android:text="@string/forget_psd"
                android:textAllCaps="false"
                style="@style/regular"
                android:textColor="#8E8F91" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
