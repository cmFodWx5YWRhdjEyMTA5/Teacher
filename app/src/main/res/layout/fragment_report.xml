<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Report">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginEnd="@dimen/dim20"
            android:layout_marginStart="@dimen/dim20"
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:paddingBottom="60dp"
                android:id="@+id/simpleTableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Home Address"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/home_address"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="City"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="State"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="Country"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:text="Home PIN code"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/pin_code"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:text="Office Address"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/office_address"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="City"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/office_city"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="State"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/office_state"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Country"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/office_country"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Office PIN Code"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/office_pin_code"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        />

                </TableRow>

                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="ID"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/employee_id"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        />

                </TableRow>

            </TableLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>