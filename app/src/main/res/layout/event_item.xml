<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dim10"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="@dimen/dim5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_day"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="@dimen/dim5"
        android:layout_below="@+id/number"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_title"
            android:drawableStart="@drawable/ic_rounded_black_square_shape"
            android:drawablePadding="@dimen/dim5"
            android:layout_below="@id/event_day"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/dim5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_time"
            android:textColor="@android:color/darker_gray"
            android:layout_margin="@dimen/dim5"
            android:layout_toEndOf="@id/event_title"
            android:layout_below="@+id/event_day"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_description"
            android:layout_below="@id/event_title"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/dim5"
            />
    </RelativeLayout>
</RelativeLayout>