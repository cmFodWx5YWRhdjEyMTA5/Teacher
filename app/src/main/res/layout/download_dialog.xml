<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dim5"
        android:layout_marginStart="@dimen/dim5"
        card_view:cardElevation="@dimen/dim5"
        card_view:cardCornerRadius="@dimen/dim15"
        card_view:contentPaddingLeft="@dimen/dim5"
        card_view:contentPaddingRight="@dimen/dim5"
        android:layout_marginTop="@dimen/dim5"
        android:layout_marginBottom="@dimen/dim10"
        card_view:cardBackgroundColor="@android:color/white"
        android:id="@+id/cardView2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dim10"
            android:layout_marginTop="@dimen/dim10"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/download"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim10"
                android:layout_marginEnd="@dimen/dim10"
                android:layout_marginStart="@dimen/dim10"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:id="@+id/phoone_no_txt"
                android:textColor="@color/colorPrimary"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim10"
                android:id="@+id/icons"
                android:layout_marginBottom="@dimen/dim10"
                android:layout_gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/dim20"
                    android:foreground="@drawable/ripple_effect"
                    card_view:srcCompat="@drawable/ic_pdf"
                    />

                <ImageView
                    android:id="@+id/mp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/dim20"
                    android:layout_marginEnd="@dimen/dim20"
                    android:layout_toEndOf="@+id/pdf"
                    android:foreground="@drawable/ripple_effect"
                    card_view:srcCompat="@drawable/ic_mp" />

                <ImageView
                    android:id="@+id/doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/dim20"
                    android:layout_marginEnd="@dimen/dim20"
                    android:foreground="@drawable/ripple_effect"
                    android:layout_toEndOf="@+id/mp4"
                    card_view:srcCompat="@drawable/ic_doc" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:foreground="@drawable/ripple_effect"
                    android:layout_toEndOf="@+id/doc"
                    card_view:srcCompat="@drawable/ic_pic" />

            </RelativeLayout>

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/dim5"
                android:layout_marginEnd="@dimen/dim20"
                android:layout_marginStart="@dimen/dim20"
                android:layout_marginTop="@dimen/dim5"
                />



        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
