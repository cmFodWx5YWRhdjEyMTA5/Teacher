<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="220dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:id="@+id/text"
        android:padding="@dimen/dim10"
        android:text="@string/forget_psd"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dim40"
        android:layout_below="@id/text"
        android:id="@+id/forget_psd_email"
        android:layout_marginTop="@dimen/dim20"
        android:layout_marginStart="@dimen/dim40"
        android:padding="@dimen/dim10"
        android:hint="@string/email"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/rounded_border"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginEnd="@dimen/dim40"
        android:layout_marginStart="@dimen/dim40"
        android:layout_marginTop="@dimen/dim20"
        android:layout_marginBottom="@dimen/dim20"
        android:layout_below="@id/forget_psd_email"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/done"
            android:layout_marginTop="@dimen/dim20"
            android:layout_marginBottom="@dimen/dim20"
            android:foreground="@drawable/ripple_effect"
            android:layout_marginEnd="@dimen/dim40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/success"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/cancel"
            android:layout_marginStart="@dimen/dim40"
            android:layout_marginTop="@dimen/dim20"
            android:layout_marginBottom="@dimen/dim20"
            android:foreground="@drawable/ripple_effect"
            android:layout_gravity="center_vertical"
            android:background="@drawable/error"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>