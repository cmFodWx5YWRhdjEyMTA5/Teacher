<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Personal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginEnd="@dimen/dim20"
            android:layout_marginStart="@dimen/dim20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:paddingBottom="60dp"
                android:layout_alignParentStart="true"
                android:id="@+id/simpleTableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Marital status"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/marital_status"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Single"
                        />
                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="No. of children"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/no_children"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="2"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Father's Name"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/father_name"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Mother's Name"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/mother_name"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Spouse's Name"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/spouse_name"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Blood group"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/blood_group"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Nationality"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/nationality"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Office phone 1"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/office_phone_one"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Office phone 2"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/office_phone_two"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Mobile"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Home Phone"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/home_phone"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="E-mail"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/employee_email"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
                <TableRow
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="Fax"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:id="@+id/fax"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        />

                </TableRow>
            </TableLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>